{
  "manifest_version": 2,

  "name": "Google Translator Widget",
  "description": "This extension translate de words that you select on webpage.",
  "author": [
    "Felipe Pires",
    "Rodolfo Dias"
  ],
  "version": "0.0.10",
  // "icons": {
  //   "16": "icon16.png",
  //   "48": "icon48.png",
  //   "128": "icon128.png"
  // },
  "browser_action": {
    "default_icon": "apple-touch-icon-precomposed.png",
    "default_popup": "configurations.html"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*", 
    "chrome://favicon/",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "css": ["./css/google-translator-widget.min.css"],
      "js": ["./js/jquery-1.11.0.min.js", "./js/google-translator-widget.min.js", "./js/run.google.translator.widget.js"]
    }
  ]
}
